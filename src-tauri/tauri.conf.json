{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ccw-launcher",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "http": {
        "all": true,
        "request": true
      },
      "window": {
        "all": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": [
          "$APPDATA/**",
          "$APPDATA/*",
          "$APPDATA/",
          "$APPDATA"
        ]
      }
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "www.ccw.site",
          "windows": [
            "main",
            "ccw",
            "登录",
            "管理登录"
          ],
          "enableTauriAPI": true
        },
        {
          "domain": "graph.qq.com",
          "windows": [
            "main",
            "ccw",
            "登录",
            "管理登录"
          ],
          "enableTauriAPI": true
        }
      ]
    },
    "windows": [
      {
        "title": "共创世界启动器",
        "width": 800,
        "height": 600,
        "minHeight": 300,
        "minWidth": 400
      }
    ],
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ccw.launcher.com",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}